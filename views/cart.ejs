<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bag | Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">

  <!-- NAVBAR -->
  <%- include("partials/navbar") %>

  <!-- PAGE -->
  <div class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 lg:grid-cols-3 gap-10">

    <!-- LEFT : CART ITEMS -->
    <section class="lg:col-span-2 space-y-6">

      <h2 class="text-2xl font-bold text-gray-800 flex items-center gap-2">
        üõí My Cart
        <span class="text-sm text-gray-500 font-medium">
          (<%= cartItems.length %> items)
        </span>
      </h2>

      <% if (cartItems.length === 0) { %>
        <!-- EMPTY CART -->
        <div class="bg-white rounded-xl p-10 text-center shadow">
          <div class="text-6xl mb-4">üõçÔ∏è</div>
          <h3 class="text-xl font-semibold mb-2">Your cart is empty</h3>
          <p class="text-gray-500 mb-6">Looks like you haven‚Äôt added anything yet.</p>
          <a href="/shop"
             class="inline-block bg-black text-white px-6 py-3 rounded-lg hover:bg-gray-800 transition">
            Continue Shopping
          </a>
        </div>
      <% } %>

      <% cartItems.forEach(item => { %>

        <!-- CART ITEM -->
        <div class="bg-white rounded-xl shadow p-5 flex gap-5 items-center">

          <!-- IMAGE -->
          <div class="w-28 h-28 rounded-lg bg-gray-100 flex items-center justify-center overflow-hidden">
            <% if (item.image) { %>
              <img
                src="<%= item.image %>"
                class="h-full w-full object-contain"
                alt="<%= item.name %>" />
            <% } %>
          </div>

          <!-- DETAILS -->
          <div class="flex-1">
            <h3 class="font-semibold text-lg text-gray-800"><%= item.name %></h3>

            <div class="flex items-center gap-3 mt-1">
              <span class="text-lg font-bold">‚Çπ <%= item.price %></span>

              <% if (item.discount > 0) { %>
                <span class="text-sm text-green-600 font-medium">
                  <%= item.discount %>% OFF
                </span>
              <% } %>
            </div>

            <!-- ACTIONS -->
            <div class="flex items-center gap-6 mt-4">

              <!-- QUANTITY -->
              <div class="flex items-center border rounded-lg overflow-hidden">
                <a href="/cart/decrease/<%= item._id %>"
                   class="px-3 py-1 hover:bg-gray-100">‚àí</a>

                <span class="px-4 py-1 text-sm font-semibold">
                  <%= item.quantity %>
                </span>

                <a href="/cart/increase/<%= item._id %>"
                   class="px-3 py-1 hover:bg-gray-100">+</a>
              </div>

              <!-- REMOVE -->
              <a href="/cart/remove/<%= item._id %>"
                 class="text-sm text-red-500 hover:underline flex items-center gap-1">
                üóë Remove
              </a>

            </div>
          </div>

          <!-- PRICE -->
          <div class="text-right font-semibold text-gray-800">
            ‚Çπ <%= item.price * item.quantity %>
          </div>

        </div>

      <% }) %>

    </section>

    <!-- RIGHT : PRICE SUMMARY -->
    <aside class="bg-white rounded-xl shadow p-6 h-fit space-y-6">

      <h3 class="text-lg font-semibold text-gray-800">
        Price Breakdown
      </h3>

      <div class="space-y-3 text-sm text-gray-600">

        <div class="flex justify-between">
          <span>Total MRP</span>
          <span>‚Çπ <%= totals.mrp %></span>
        </div>

        <div class="flex justify-between">
          <span>Discount</span>
          <span class="text-green-600">‚àí ‚Çπ <%= totals.discount %></span>
        </div>

        <div class="flex justify-between">
          <span>Platform Fee</span>
          <span>‚Çπ <%= totals.platformFee %></span>
        </div>

        <div class="flex justify-between">
          <span>Shipping</span>
          <span class="text-green-600">FREE</span>
        </div>

        <hr />

        <div class="flex justify-between text-lg font-bold text-gray-800">
          <span>Total Amount</span>
          <span class="text-green-600">‚Çπ <%= Math.round(totals.final) %>

</span>
        </div>

      </div>

      <!-- CHECKOUT -->
      <a href="/checkout"
         class="block text-center bg-black text-white py-3 rounded-lg font-semibold hover:bg-gray-800 transition">
        Proceed to Checkout ‚Üí
      </a>

      <p class="text-xs text-gray-400 text-center">
        Secure payments ¬∑ Easy returns ¬∑ Fast delivery
      </p>

    </aside>

  </div>

</body>
</html>
