<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>My Account | Bag</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">

  <!-- NAVBAR -->
  <%- include("partials/navbar") %>

  <div class="max-w-7xl mx-auto px-6 py-10 grid grid-cols-1 lg:grid-cols-4 gap-10">

    <!-- SIDEBAR -->
    <aside class="bg-white rounded-xl shadow p-6 space-y-4 h-fit">
      <h2 class="text-lg font-bold text-gray-800">My Account</h2>

      <a href="/users/account" class="block text-sm font-medium text-black">
        ðŸ‘¤ Profile
      </a>

      <a href="/cart" class="block text-sm text-gray-600 hover:text-black">
        ðŸ›’ My Cart (<%= cartCount %>)
      </a>

      <a href="#orders" class="block text-sm text-gray-600 hover:text-black">
        ðŸ“¦ My Orders (<%= ordersCount %>)
      </a>

      <hr>
    </aside>

    <!-- MAIN CONTENT -->
    <section class="lg:col-span-3 space-y-8">

      <!-- PROFILE CARD -->
      <div class="bg-white rounded-xl shadow p-6">
        <h3 class="text-xl font-bold text-gray-800 mb-4">
          Profile Information
        </h3>

        <div class="space-y-2 text-sm">
          <p>
            <span class="font-semibold">Full Name:</span>
            <%= user.fullname %>
          </p>
          <p>
            <span class="font-semibold">Email:</span>
            <%= user.email %>
          </p>
        </div>
      </div>

      <!-- CART SUMMARY -->
      <div class="bg-white rounded-xl shadow p-6 flex justify-between items-center">
        <div>
          <h3 class="text-lg font-semibold text-gray-800">Cart</h3>
          <p class="text-sm text-gray-500">
            You have <%= cartCount %> item(s) in your cart
          </p>
        </div>

        <a
          href="/cart"
          class="bg-black text-white px-5 py-2 rounded-lg hover:bg-gray-800 transition">
          Go to Cart â†’
        </a>
      </div>
<!-- ORDERS -->
<div id="orders" class="bg-white rounded-xl shadow p-6">
  <h3 class="text-lg font-semibold text-gray-800 mb-4">
    My Orders
  </h3>

  <% if (ordersCount === 0) { %>
    <p class="text-sm text-gray-500">
      You havenâ€™t placed any orders yet.
    </p>
  <% } else { %>

    <div class="space-y-4">

      <% orders.forEach(order => { %>
        <div class="border rounded-lg p-4">

          <!-- ORDER HEADER -->
          <div class="flex justify-between items-center mb-2">
            <span class="text-sm font-semibold">
              Order ID: <%= order._id %>
            </span>

            <span
              class="text-xs px-3 py-1 rounded-full font-medium
              <%= order.paymentStatus === 'PAID'
                ? 'bg-green-100 text-green-700'
                : 'bg-yellow-100 text-yellow-700' %>">
              <%= order.paymentStatus %>
            </span>
          </div>

          <!-- ITEMS -->
          <div class="text-sm text-gray-600 space-y-1">
            <% order.items.forEach(item => { %>
              <div class="flex justify-between">
                <span>
                  <%= item.product.name %> Ã— <%= item.quantity %>
                </span>
                <span>
                  â‚¹ <%= item.price * item.quantity %>
                </span>
              </div>
            <% }) %>
          </div>

          <hr class="my-3">

          <!-- PAYMENT INFO -->
          <div class="flex justify-between text-sm">
            <span class="font-semibold">Order Total</span>
            <span class="font-semibold text-gray-800">
              â‚¹ <%= order.amount %>
            </span>
          </div>

          <div class="flex justify-between text-sm mt-1">
            <span class="text-gray-500">
              <%= order.paymentStatus === 'PAID'
                ? 'Amount Paid'
                : 'Amount to Pay' %>
            </span>

            <span
              class="font-semibold
              <%= order.paymentStatus === 'PAID'
                ? 'text-green-600'
                : 'text-red-500' %>">
              â‚¹ <%= order.amount %>
            </span>
          </div>

          <p class="text-xs text-gray-400 mt-2">
            Payment Method:
            <span class="font-medium text-gray-600">
              <%= order.paymentMethod %>
            </span>
            Â· Placed on
            <%= new Date(order.createdAt).toLocaleDateString() %>
          </p>

          <!-- ORDER STATUS TIMELINE -->
<div class="mt-4">
  <div class="flex items-center justify-between text-xs">

    <% const steps = ["PLACED", "SHIPPED", "OUT_FOR_DELIVERY", "DELIVERED"]; %>

    <% steps.forEach((step, index) => { %>
      <div class="flex-1 flex flex-col items-center">

        <!-- CIRCLE -->
        <div
          class="w-4 h-4 rounded-full
          <%= steps.indexOf(order.status) >= index
            ? 'bg-green-600'
            : 'bg-gray-300' %>">
        </div>

        <!-- LINE -->
        <% if (index !== steps.length - 1) { %>
          <div
            class="h-1 w-full
            <%= steps.indexOf(order.status) > index
              ? 'bg-green-600'
              : 'bg-gray-300' %>">
          </div>
        <% } %>

        <!-- LABEL -->
        <span
          class="mt-2 text-[11px]
          <%= steps.indexOf(order.status) >= index
            ? 'text-green-600 font-semibold'
            : 'text-gray-400' %>">
          <%= step.replaceAll("_", " ") %>
        </span>

      </div>
    <% }) %>

  </div>
</div>


        </div>
      <% }) %>

    </div>

  <% } %>
</div>
    </section>

  </div>

</body>
</html>
