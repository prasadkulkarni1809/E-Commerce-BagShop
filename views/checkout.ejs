<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Bag | Checkout</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-50">

<%- include("partials/navbar") %>

<div class="max-w-6xl mx-auto px-6 py-12 grid grid-cols-1 lg:grid-cols-3 gap-10">

  <!-- LEFT : FORM -->
  <form
    action="/checkout"
    method="POST"
    class="lg:col-span-2 bg-white p-8 rounded-2xl shadow space-y-8"
  >


    <!-- DELIVERY -->
    <div>
      <h2 class="text-xl font-bold mb-4">Delivery Details</h2>

      <div class="space-y-4">
        <input
          name="address"
          required
          placeholder="Address"
          class="w-full border rounded-lg px-4 py-3 focus:ring focus:ring-black/10"
        />

        <div class="grid grid-cols-2 gap-4">
          <input
            name="city"
            required
            placeholder="City"
            class="border rounded-lg px-4 py-3"
          />
          <input
            name="pincode"
            required
            placeholder="Pincode"
            class="border rounded-lg px-4 py-3"
          />
        </div>

        <input
          name="phone"
          required
          placeholder="Phone"
          class="w-full border rounded-lg px-4 py-3"
        />
      </div>
    </div>

    <!-- PAYMENT -->
    <div>
      <h2 class="text-xl font-bold mb-4">Payment Method</h2>

      <div class="space-y-4">

        <!-- COD -->
        <label class="flex items-center gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
          <input
            type="radio"
            name="paymentMethod"
            value="COD"
            checked
            class="accent-black"
          />
          <div>
            <p class="font-semibold">Cash on Delivery</p>
            <p class="text-sm text-gray-500">Pay when your order arrives</p>
          </div>
        </label>

        <!-- RAZORPAY -->
        <label class="flex items-center gap-3 p-4 border rounded-lg cursor-pointer hover:bg-gray-50">
          <input
            type="radio"
            name="paymentMethod"
            value="ONLINE"
            class="accent-black"
          />
          <div class="flex items-center gap-3">
            <div>
              <p class="font-semibold">Online Payment</p>
              <p class="text-sm text-gray-500">
                UPI · Cards · Netbanking · Wallets
              </p>
            </div>
            <img
              src="https://razorpay.com/assets/razorpay-glyph.svg"
              class="h-6 ml-2"
              alt="Razorpay"
            />
          </div>
        </label>

      </div>
    </div>

    <!-- SUBMIT -->
    <button
      type="submit"
      class="w-full bg-black text-white py-4 rounded-xl text-lg font-semibold hover:bg-gray-800 transition"
    >
      Place Order
    </button>

  </form>

  <!-- RIGHT : SUMMARY -->
  <aside class="bg-white p-8 rounded-2xl shadow h-fit space-y-6">

    <h3 class="text-lg font-bold">Order Summary</h3>

    <div class="space-y-3 text-sm">
      <% cart.forEach(item => { %>
        <div class="flex justify-between">
          <span><%= item.product.name %> × <%= item.quantity %></span>
          <span>₹ <%= item.product.price * item.quantity %></span>
        </div>
      <% }) %>
    </div>

    <hr>

    <div class="space-y-2 text-sm">
      <div class="flex justify-between">
        <span>Subtotal</span>
        <span>₹ <%= totals.subtotal %></span>
      </div>

      <div class="flex justify-between">
        <span>Platform Fee</span>
        <span>₹ 20</span>
      </div>
    </div>

    <hr>

    <div class="flex justify-between text-lg font-bold">
      <span>Total</span>
      <span class="text-green-600">₹ <%= totals.final %></span>
    </div>

    <p class="text-xs text-gray-400 text-center">
      100% secure payments powered by Razorpay
    </p>

  </aside>

</div>

</body>
</html>
