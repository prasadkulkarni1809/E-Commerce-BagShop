<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Scatch | Auth</title>

  <!-- Tailwind CDN (for development) -->
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 relative">

  <!-- ðŸ”´ FLASH ERROR -->
<% if (error && error.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 bg-red-500 text-white px-5 py-3 rounded-md shadow-md">
    <%= error[0] %>
  </div>
<% } %>
<% if (success && success.length > 0) { %>
  <div class="absolute top-5 left-1/2 -translate-x-1/2 bg-green-500 text-white px-5 py-3 rounded-md shadow-md">
    <%= success[0] %>
  </div>
<% } %>




  <!-- MAIN CONTAINER -->
  <div class="w-full h-screen flex px-20">

    <!-- LEFT : SIGNUP -->
    <div class="w-1/2 flex items-center justify-center">
      <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg">

        <h2 class="text-4xl font-bold mb-2">
          Welcome to <span class="text-blue-500">Bag Shop</span>
        </h2>
        <p class="text-gray-600 mb-6">Create your account</p>

       <form action="/users/register" method="POST" autocomplete="off" novalidate>



          <input
            type="text"
            name="fullname"
            placeholder="Full Name"
            class="w-full px-4 py-2 mb-3 border rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />

          <input
            type="email"
            name="email"
            placeholder="Email"
            class="w-full px-4 py-2 mb-3 border rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />

          <input
            type="password"
            name="password"
            placeholder="Password"
            class="w-full px-4 py-2 mb-4 border rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />

          <button
            type="submit"
            class="w-full bg-blue-500 hover:bg-blue-600 text-white py-2 rounded-full transition"
          >
            Create My Account
          </button>
        </form>

      </div>
    </div>

    <!-- RIGHT : LOGIN -->
    <div class="w-1/2 flex items-center justify-center">
      <div class="w-full max-w-md bg-white p-8 rounded-xl shadow-lg">

        <h2 class="text-3xl font-semibold mb-6">
          Login Your Account
        </h2>

       <form action="/users/login" method="POST" autocomplete="off">


          <input
            type="email"
            name="email"
            placeholder="Email"
            class="w-full px-4 py-2 mb-3 border rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />

          <input
            type="password"
            name="password"
            placeholder="Password"
            class="w-full px-4 py-2 mb-4 border rounded-md bg-gray-100 focus:outline-none focus:ring-2 focus:ring-blue-400"
            required
          />

          <button
            type="submit"
            class="w-full bg-green-500 hover:bg-green-600 text-white py-2 rounded-full transition"
          >
            Login
          </button>
        </form>

      </div>
    </div>

  </div>

</body>
</html>
